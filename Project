#include <iostream>
#include <cmath>
#include <string>

using namespace std;

void PrintMenu()
{
    cout << "1.Tree height" << endl;
    cout << "2.Planet Distances" << endl;
    cout << "3.Height of a building " << endl;
    cout << "4.Units converter" << endl;
}

void TreeHeight()
{
    cout << "Your Height: " << endl;
    double yourHeight;
    cin >> yourHeight;

    cout << "Your Shadow Length: " << endl;
    double yourShadow;
    cin >> yourShadow;
    
    cout << "Tree Shadow Length: " << endl;
    double treeShadow;
    cin >> treeShadow;

    double treeHeight = (yourHeight * treeShadow) / yourShadow; //Calculating Tree Height//

    cout << "The tree height is: " << treeHeight << endl;
}

void HeightOfABuilding()
{
    double distance;

    cout << "Enter distance to the building: " << endl;

    cin >> distance;

    double angle;

    cout << "Enter angle: " << endl;

    cin >> angle;

    //The tangent determines the ratio between the opposite leg and the adjacent leg to an angle//

    double tangent = tan(angle * 3.14159265 / 180.0);

    double height = tangent * distance;

    cout << "Building height: " << height << endl;
}

void PlanetDistances()
{
    int number;

    cout << "Select a Planet: " << endl;
    cout << "1.Mercury" << endl;
    cout << "2.Venus" << endl;
    cout << "3.Earth" << endl;
    cout << "4.Mars" << endl;
    cout << "5.Jupiter" << endl;
    cout << "6.Saturn" << endl;
    cout << "7.Uranus" << endl;
    cout << "8.Neptune" << endl;


    cin >> number;
    switch (number)
    {
    case 1:
        cout << "Distance from the Sun to Mercury is 55 million km " << endl;
        break;
    case 2:
        cout << "Distance from the Sun to Venus is 108 million km " << endl;
        break;
    case 3:
        cout << "Distance from the Sun to Earth is 149 million km " << endl;
        break;
    case 4:
        cout << "Distance from the Sun to Mars is 228 million km " << endl;
        break;
    case 5:
        cout << "Distance from the Sun to Jupiter is 780 million km " << endl;
        break;
    case 6:
        cout << "Distance from the Sun to Saturn is 1437 million km " << endl;
        break;
    case 7:
        cout << "Distance from the Sun to Uranus is 2871 million km " << endl;
        break;
    case 8:
        cout << "Distance from the Sun to Neptune is 4530 million km " << endl;
        break;
    }
}

void UnitsConvertor()
{
    int days, hours, minutes, weeks, seconds;

    cout << "Enter a number of days: ";

    cin >> days;

    cout << "Enter a number of hours: ";

    cin >> hours;

    cout << "Enter a number of minutes: ";

    cin >> minutes;

    seconds = (days * 86400) + (hours * 3600) + (minutes * 60);

    weeks = seconds / 604800;

    cout << "Equal to " << seconds << " seconds" << endl;

    cout << "Equal to " << weeks << " weeks" << endl;
}

void TakeCommand()
{
    PrintMenu();

    int command = 0;

    cin >> command;

    while (command != 0)
    {
        switch (command)
        {
        case 1:
            TreeHeight();
            break;
        case 2:
            PlanetDistances();
            break;
        case 3:
            HeightOfABuilding();
            break;
        case 4:
            UnitsConvertor();
            break;
        default:
            break;
        }
        system("PAUSE"); //This will print Press any key to continue//

        system("CLS"); //Clears the program//

        PrintMenu();

        cin >> command;
    }
}
